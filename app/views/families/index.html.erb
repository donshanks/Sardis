<h1>Listing families</h1>

<table>
  <tr>
    <th>Family name</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip code</th>
  </tr>

<% for family in @families %>
  <tr>
    <td><%=h family.family_name %></td>
    <td><%=h family.address1 %></td>
    <td><%=h family.address2 %></td>
    <td><%=h family.city %></td>
    <td><%=h family.state %></td>
    <td><%=h family.zip_code %></td>
    <td><%= link_to 'Show', family %></td>
    <td><%= link_to 'Edit', edit_family_path(family) %></td>
    <td><%= link_to 'Destroy', family, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

