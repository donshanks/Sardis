<h1>Listing attendances</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Person</th>
    <th>Event date</th>
    <th>Attended</th>
    <th>Event</th>
  </tr>

<% for attendance in @attendances %>
  <tr>
    <td><%=h attendance.id %></td>
    <td><%=h attendance.person_id %></td>
    <td><%=h attendance.event_date %></td>
    <td><%=h attendance.attended %></td>
    <td><%=h attendance.event_id %></td>
    <td><%= link_to 'Show', attendance %></td>
    <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
    <td><%= link_to 'Destroy', attendance, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New attendance', new_attendance_path %>
